    //
       3/3. This creates and displays the graph. As it is here, you can call this from the window.onload event,
         allowing you to put it in your pages header.
          
    script
      window.onload = function ()
      {
      oven1 = new RGraph.Bar('oven1', [10,10,10,10]);
      oven1.Set('chart.gutter.left', 35);
      oven1.Set('chart.colors', ['green', 'red', 'blue', 'purple']);
      oven1.Set('chart.title', 'oven1');
      oven1.Set('chart.labels', ['CPU','mem','swap','load']);
      oven1.Draw();

      oven2 = new RGraph.Bar('oven2', [20,10,10,10]);
      console.log(oven2)
      oven2.Set('chart.gutter.left', 35);
      oven2.Set('chart.colors', ['green']);
      oven2.Set('chart.title', 'oven2');
      oven2.Set('chart.labels', ['CPU','mem','swap','load']);
      oven2.Draw();
      }

      var socket = io.connect('http://localhost');
      socket.on('update', function (data) {
        // console.log(data);
        for (element in data) {
          graph = eval(element)
          RGraph.Clear(document.getElementById(element));
          graph.data = data[element]
          console.log(graph);
          graph.Draw();
        }
        // socket.emit('my other event', { my: 'data' });
      });

